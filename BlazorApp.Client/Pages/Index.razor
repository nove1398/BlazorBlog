@page "/"
@inject ApiHelper Client
@inject LocalStorageService Service
 
<h1>Hello, world!</h1>

Welcome to your new app. 

<SurveyPrompt Title="How is Blazor working for you?" />


@code{      

    protected override async Task OnInitializedAsync()
    {
        LoginViewModel login = new LoginViewModel();
        login.Email = "drew@yahoo.com";
        login.Password = "password";
        var response = await Client.Post<ResponseViewModel>("/api/v1/auth/login", login);

        await Service.SetLocalStorage("token", response.Message);
    }
}